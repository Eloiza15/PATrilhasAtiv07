using System;

namespace Exercicios
{
    class Program
    {
        public static void Main()
        {
        	
//Crie uma matriz de inteiros com 3 linhas e 3 colunas. Inicialize a matriz com
//valores inteiros aleat√≥rios entre 1 e 100 e, em seguida, encontre o maior
//valor da matriz.
            
            Random random = new Random();
	
            int[,] matriz = new int[3,3];
            
             for (int i = 0; i < 3; i++)
            {
                for (int j = 0; j < 3; j++)
                {
                	matriz[i,j] = random.Next(1 ,101);
                }
            }
            
             int maiorValor = int.MinValue;
             
              for (int i = 0; i < 3; i++)
            {
                for (int j = 0; j < 3; j++)
                {
                	if (matriz[i,j] > maiorValor){
                		
                		maiorValor = matriz[i,j];
                	}
                }
            }
              
              Console.WriteLine("Maior valor da matriz: " + maiorValor);
                
            Console.WriteLine("");
            Console.WriteLine("Pressione qualquer tecla para fechar.");
            Console.ReadKey();
        }
    }
}
