using System;

namespace Exercicios
{
    class Program
    {
        public static void Main()
        {
//        	Crie uma matriz de inteiros com 4 linhas e 2 colunas. Inicialize a matriz com
//valores inteiros aleatórios entre 1 e 10 e, em seguida, calcule a soma de todos
//os valores da matriz.
	
            int[,] inteiros = { {1,2}, {3,4}, {5,6}, {7,8} };
            
            int soma = 0;
            
            for ( int i = 0; i < 4; i++){
            	for (int j = 0; j < 2; j++){
            		
            		soma += inteiros[i,j];
            	}
            }
            
            Console.WriteLine("A soma de todos os valores da matriz é: " + soma);
            
            Console.WriteLine("");
            Console.WriteLine("Pressione qualquer tecla para fechar.");
            Console.ReadKey();
        }
    }
}
